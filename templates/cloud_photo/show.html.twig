{% extends 'base.html.twig' %}

{% block title %}Photo {{ photo.id }}{% endblock %}

{% block body %}
<h1>Photo n°{{ photo.id }}</h1>

<table class="table">
  <tbody>
    <tr>
      <th>Id</th>
      <td>{{ photo.id }}</td>
    </tr>
    <tr>
      <th>Description</th>
      <td>{{ photo.description }}</td>
    </tr>
  </tbody>
</table>

{# Lien inverse : remonter vers la CloudBox parente #}
<p>
  <a href="{{ path('cloudbox_show', {'id': photo.box.id}) }}">← Retour à la CloudBox {{ photo.box.id }}</a>
</p>
{% endblock %}